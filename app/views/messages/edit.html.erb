<div class="page-header">
  <h1>Editing Message #<%= @message.id %></h1>
</div>

<% if @message.errors.any? %>
  <ul>
  <% @message.errors.full_messages.each do |m| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul><%= m %></ul>
      </div>
      <% end %>
    </ul>
    <% end %>

<%= form_tag(message_url(@message), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @message.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :receiver_userid, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :receiver_userid, @message.receiver_userid, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :message, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :message, @message.message, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Message", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
