<div class="page-header">
  <h1>Messages</h1>
</div>

<p><%= link_to 'Add a New Message', new_message_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender_userid %></td>
        <td><%= message.receiver_userid %></td>
        <td><%= message.message %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, message_url(message), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_message_url(message), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, message_url(message), method: 'delete', data: { confirm: "Do you really want to delete this message?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

