<div class="page-header">
  <h1>All Messages</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Sender's email</th>
      <th>Message</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.full_name %></td>
        <td><%= message.user.email %></td>
        <td><%= message.message %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, message_url(message), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_message_url(message), class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

