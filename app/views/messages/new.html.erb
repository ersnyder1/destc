<div class="page-header">
  <h1>New Message</h1>
</div>

<%= form_tag(messages_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :sender_userid, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :sender_userid, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :receiver_userid, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :receiver_userid, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :message, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :message, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Message", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
