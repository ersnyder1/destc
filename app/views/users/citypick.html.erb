<div class="page-header">
  <h1>What city are you traveling to?</h1>
</div>

<%= form_tag(users_url, method: 'get', class: 'form-horizontal') do %>
 

  <div class="form-group">
    <%= label_tag :expertcity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :expertcity, options_from_collection_for_select(User.all, :expertcity, :expertcity),class: 'form-control' %>
    </div>
  </div>



    <div class="form-group">
    <div class="col-md-offset-0 col-md-6">
      <%= submit_tag "See Experts!", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>