<div class="page-header">
  <h1>What city are you traveling to?</h1>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :"", nil, class: 'col-md-0 control-label' %>
    <div class="col-md-6">
      <select <%= text_field_tag :expertcity, nil, class: 'form-control' %>
        <option value="Philadelphia">Philadelphia</option>
        <option value="Baltimore">Baltimore</option>
        <option value="New York">New York</option>
       </select>
    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-0 col-md-6">
      <%= submit_tag "See Experts!", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>