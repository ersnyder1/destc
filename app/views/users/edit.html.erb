<div class="page-header">
  <h1>Edit <%= @user.full_name %>'s Profile</h1>
</div>

<% if current_user.id == @user.id %>

<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul><%= message %></ul>
      </div>
      <% end %>
    </ul>
    <% end %>


<%= form_tag(user_url(@user), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag "First name", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :firstname, @user.firstname, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag "Last name", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :lastname, @user.lastname, class: 'form-control' %>
    </div>
  </div>
 
 <%= hidden_field_tag :expert, @user.expert, class: 'form-control' %>
 <%= hidden_field_tag :admin, @user.admin, class: 'form-control' %> 


  <div class="form-group">
    <%= label_tag "Home Town", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :expertcity, @user.expertcity, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :gender, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :gender, @user.gender, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :age, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :age, @user.age, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :bio, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :bio, @user.bio, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag "Link to a photo of you", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :pictureurl, @user.pictureurl, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :phone, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :phone, @user.phone, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Profile", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<% else%>
<h3><b>You can't edit a profile that doesn't belong to you.</b></h3>

<% end %>

