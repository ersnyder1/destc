<div class="page-header">
  <h1>Experts in <%= @expertcity %></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.age %></td>
        <td><%= user.bio %></td>
        <td><%= image_tag user.pictureurl, width: 100, class: "img-circle" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, new_message_url(user), class: 'btn btn-warning' %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>

