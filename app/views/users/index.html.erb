<div class="page-header">
  <h1>Experts in New York</h1>
</div>

<p><%= link_to 'Add a New User', new_user_url, class: 'btn btn-primary' %></p>

#make sure you change so that it only shows if expert=1 and city=whatever was picked in the prior page

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.age %></td>
        <td><%= user.bio %></td>
        <td><%= image_tag user.pictureurl, width: 100, class: "img-circle" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, new_message_url(user), class: 'btn btn-warning' %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>

