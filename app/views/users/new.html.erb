<div class="page-header">
  <h1>New User</h1>
</div>


<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :firstname, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :firstname, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :lastname, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :lastname, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expert, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :expert, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :admin, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :admin, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expertcity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :expertcity, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :gender, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :gender, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :age, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :age, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :bio, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :bio, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :pictureurl, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :pictureurl, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :phone, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :phone, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
