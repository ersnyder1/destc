<div class="page-header">
  <h1><%= image_tag @user.pictureurl, width: 70, class: "img-circle" %> <%= @user.full_name%>'s Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>Firstname</dt>
  <dd><%= @user.firstname %></dd>

  <dt>Lastname</dt>
  <dd><%= @user.lastname %></dd>

  <dt>Expert</dt>
  <dd><%= @user.expert %></dd>

  <dt>Admin</dt>
  <dd><%= @user.admin %></dd>

  <dt>Expertcity</dt>
  <dd><%= @user.expertcity %></dd>

  <dt>Gender</dt>
  <dd><%= @user.gender %></dd>

  <dt>Age</dt>
  <dd><%= @user.age %></dd>

  <dt>Bio</dt>
  <dd><%= @user.bio %></dd>

  <dt>Pictureurl</dt>
  <dd><%= @user.pictureurl %></dd>

  <dt>Phone</dt>
  <dd><%= @user.phone %></dd>

</dl>
