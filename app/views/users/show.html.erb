<div class="page-header">
<h3> My messages with  <%= @user.full_name %> </h3>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th></th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= image_tag message.user.pictureurl, width: 70, class: "img-circle" %></td>
        <td><%= message.user.full_name %></td>
        <td>"<%= message.message %>"</td>
      
      </tr>
    <% end %>
  </tbody>
</table>
















