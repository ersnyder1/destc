<div class="page-header">
  <h1><%= image_tag @user.pictureurl, width: 70, class: "img-circle" %> <%= @user.full_name%>'s Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>Firstname</dt>
  <dd><%= @user.firstname %></dd>

  <dt>Lastname</dt>
  <dd><%= @user.lastname %></dd>

  <dt>Expert</dt>
  <dd><%= @user.expert %></dd>

  <dt>Admin</dt>
  <dd><%= @user.admin %></dd>

  <dt>Expertcity</dt>
  <dd><%= @user.expertcity %></dd>

  <dt>Gender</dt>
  <dd><%= @user.gender %></dd>

  <dt>Age</dt>
  <dd><%= @user.age %></dd>

  <dt>Bio</dt>
  <dd><%= @user.bio %></dd>

  <dt>Pictureurl</dt>
  <dd><%= @user.pictureurl %></dd>

  <dt>Phone</dt>
  <dd><%= @user.phone %></dd>

</dl>

<h3> My messages with  <%= @user.full_name %> </h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.full_name %></td>
        <td><%= message.message %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, message_url(message), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_message_url(message), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, message_url(message), method: 'delete', data: { confirm: "Do you really want to delete this message?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
















